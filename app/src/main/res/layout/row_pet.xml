<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/row_img_pet"
        android:layout_centerVertical="true"
        android:scaleType="centerInside" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_lbl_petName"
        android:text="Name"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/row_img_pet"
        android:layout_alignTop="@+id/row_img_pet"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_lbl_petRace"
        android:text="Race"
        android:textStyle="italic"
        android:layout_below="@id/row_lbl_petName"
        android:layout_alignLeft="@id/row_lbl_petName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_lbl_petColour"
        android:text="Colour"
        android:textStyle="italic"
        android:layout_below="@id/row_lbl_petRace"
        android:layout_alignLeft="@id/row_lbl_petRace"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_lbl_petSex"
        android:text="Sexe"
        android:textStyle="italic"
        android:layout_below="@id/row_lbl_petColour"
        android:layout_alignLeft="@id/row_lbl_petColour"/>

</RelativeLayout>